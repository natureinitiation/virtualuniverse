<div class="table-container">
    <h2>Результаты:</h2>
    <table id="results-table">
        <thead>
            <tr>
                <th>Категория</th>
                <th>Оценка</th>
            </tr>
        </thead>
        <tbody>
            <!-- Данные будут добавляться сюда -->
        </tbody>
    </table>

    <div class="average">
        <p id="average-score"></p>
    </div>
</div>

<script>
    const form = document.getElementById('form');
    const resultsTable = document.getElementById('results-table').getElementsByTagName('tbody')[0];
    const averageScoreElement = document.getElementById('average-score');

    const categories = [
        'Эмоциональное состояние',
        'Энергия',
        'Сосредоточенность',
        'Творческий процесс',
        'Социальные взаимодействия',
        'Саморефлексия'
    ];

    form.addEventListener('submit', function(event) {
        event.preventDefault();

        const data = [];
        let totalScore = 0;

        categories.forEach((category, index) => {
            const inputId = category.toLowerCase().replace(/ /g, '');
            const inputValue = parseInt(document.getElementById(inputId).value);

            data.push({ category, value: inputValue });
            totalScore += inputValue;
        });

        // Очищаем таблицу перед добавлением новых данных
        resultsTable.innerHTML = '';

        // Добавляем новые данные в таблицу
        data.forEach(item => {
            const row = resultsTable.insertRow();
            row.insertCell(0).textContent = item.category;
            row.insertCell(1).textContent = item.value;
        });

        // Вычисляем и показываем средний балл
        const averageScore = totalScore / categories.length;
        averageScoreElement.textContent = `Средний балл: ${averageScore.toFixed(2)}`;
    });
</script>

